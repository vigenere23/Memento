	partial: 'components/header',
	locals: {
		actions: [
			text: 'View notes',
			url: './notes'
		]
	}
) %>

<%= render(
	partial: 'components/hero_div',
	locals: {
		text: "It's all about small moments in our lives",
		bg_url: 'hero_bg.svg',
		button: true,
		button_text: 'Read more',
		button_url: '#about'
	}
