<% bg_url = '' if local_assigns[:bg_url].nil? %>
<% button = false if local_assigns[:button].nil? %>

<div
	class="hero-div"
	style=<%= "background-image:"\
		"linear-gradient(rgba(30,136,229,0.4),rgba(30,136,229,0.2)),"\
		"url(#{asset_path bg_url});"
	%>
>
	<h1><%= text %></h1>
	<% if button %>
		<div class="button">
			<%= render(
				partial: 'components/button_square_color',
				locals: {
					text: button_text,
					url: button_url,
					classes: ['floating', 'white']
				}
			) %>
		</div>
	<% end %>
</div>